<%= form_for @user, :url=> url_for(controller: 'users', action: 'update') do |f| %>
 
<h3> Hello <%= current_user.firstname%> </h3>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :firstname, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label :user_name %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :phone_no %><br />
    <%= f.text_field :phoneno %>
  </div>
  <br>
  
  <div class="field">
      <%= f.label :Profile_Pic %><br />
      <%= f.file_field :image%>
  </div> 

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
<br>

<h4>addresses</h4>
<% @addresses.each do |address| %>
  <%= address.addressline %>,
  <%= address.area %>,
  <%= address.city %>,
  <%= address.state %>,
  <%= address.pincode %>    
  <%= link_to "show", address_path(address) %>
  <%= link_to "edit", edit_address_path(address)%>
  <%= link_to "delete", address_path(address), method: :delete, data: { confirm: 'Are you sure?' }%>
  <br>
<%end%>

