<!-- page head start-->
  <div class="page-head">
    <h3>
        Add User
    </h3>
    <span class="sub-title">Create user(customer)</span>
    <!--<span class="sub-title">Welcome to Static Table</span>-->
    <div class="state-information">
      <ol class="breadcrumb m-b-less bg-less">
        <li><%= link_to 'Dashboard', static_pages_my_account_path %></li>
        <li><%= link_to 'Add User' , new_user_path, remote: true, class: "showpartials" %></li>
      </ol>
    </div>
  </div>
<!-- page head end-->

<div class="content clearfix">
  <div class="form-group clearfix formbackground">

  <%=form_for @user, remote: true do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@user.errors.count, "error") %> prohibited
          this user from being saved:
        </h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <label class="col-lg-2">First Name : </label>
      <div class ="col-lg-10">
        <%= f.text_field :firstname, autofocus: true, class: "form-input" %>
      </div>
    </div><br>

    <div class="field">
      <label class="col-lg-2">Last Name : </label>
      <div class ="col-lg-10">
        <%= f.text_field :lastname, class: "form-input"%>
      </div>
    </div><br>

    <div class="field">
      <label class="col-lg-2">User Name : </label>
      <div class ="col-lg-10">
        <%= f.text_field :username, class: "form-input" %>
      </div>
    </div><br>

    <div class="field">
      <label class="col-lg-2">Phone No : </label>
      <div class ="col-lg-10">
        <%= f.text_field :phoneno, class: "form-input" %>
      </div>
    </div><br>

    <div class="field">
      <label class="col-lg-2">Email: </label>
      <div class ="col-lg-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>
    </div><br>

    <div class="field">
      <label class="col-lg-2">Image: </label>
      <div class ="col-lg-10">
        <%= f.file_field :image, class: "form-input" %>
      </div>
    </div><br>

    <div class="actions">
      <center>
        <%= f.submit "Create user", class: "btn btn-default btn-lg" %>
      </center>
    </div>
  <% end %>

  </div>
</div>
