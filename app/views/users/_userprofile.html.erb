<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#view">View</a></li>
  <li><a data-toggle="tab" href="#edit">Edit</a></li>
  <li><a data-toggle="tab" href="#password">Change Password</a></li>
  <li><a data-toggle="tab" href="#view_address">Manage Address</a></li>
</ul>

<div class="tab-content">
  <div id="view" class="tab-pane fade in active">
    <h3></h3>
    <section class="panel">
      <header class="panel-heading head-border">
          View Profile
      </header>
      <table class="table table-striped custom-table table-hover">
        <tr>
          <th>Profile pic</th>
          <td><%=image_tag(user.image.url, alt:'Image', class: "user-img") if user.image? %>
          </td>
        </tr>
        <tr>
          <th>Name</th>
          <td><%= user.firstname %></td>
        </tr>
        <tr>
          <th>Username</th>
          <td><%= user.username %></td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= user.email %></td>
        </tr>
        <tr> 
          <th>Status</th>
          <td></td>
        </tr>
        <tr>
          <th>Phoneno</th>
          <td><%= user.phoneno %></td>
        </tr>
      </table>
    </section>
  </div>
  
  <div id="edit" class="tab-pane fade">
    <h3></h3>
    <section class="panel">
      <header class="panel-heading head-border">
          Edit profile
      </header>
      <%= render partial: 'edit', locals: {user: user} %>
    </section>
  </div>

  <div id="password" class="tab-pane fade">
    <h3></h3>
    <section class="panel">
      <header class="panel-heading head-border">
          Change Password
      </header>
      <%= render partial: 'change_password' %>
    </section>   
  </div>

  <div id="view_address" class="tab-pane fade">
    <h3></h3>
    <section class="panel">
      <header class="panel-heading head-border">
      <div class="panel-title pull-left">Addresses</div>
      <div class="panel-title pull-right">
        <%= link_to 'Add New Address', add_address_path, {:remote => true } %>
      </div>
      </header>
      <div id="user-addresses">
        <%= render partial: '/addresses/view_address', locals: { addresses: current_user.addresses } %>
      </div>
    </section>
  </div>
</div>

<div id="add_address"></div>

