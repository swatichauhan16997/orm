<% if @user.is_active %>
  $('#user_status-<%= @user.id %>').html("<%= escape_javascript(render partial: 'active_user_status', locals: {user: @user} ) %>");
<%else%>
  $('#user_status-<%= @user.id %>').html("<%= escape_javascript(render partial: 'inactive_user_status', locals: {user: @user} ) %>");
<%end%>
