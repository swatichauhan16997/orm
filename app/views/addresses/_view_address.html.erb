<table class="table table-striped custom-table table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Address</th>
      <th class="hidden-xs"> Action</th>
    </tr>
  </thead>
  <tbody>
    <% $i = 1 %>
    <% addresses.each do |address| %>
      <tr>
        <td><%= $i %></td>
        <td><%= address.addressline %>,  
            <%= address.area %>,
            <%= address.city %>,
            <%= address.state %>,  
            <%= address.pincode %></td>
        <td class="hidden-xs">
          <%= link_to '', address_path(address), class: "btn btn-success btn-xs fa fa-check" %>
          <%= link_to "", edit_address_path(address), class: "btn btn-primary btn-xs fa fa-pencil", remote: true %>
          <%= link_to "", address_path(address), class: "btn btn-danger btn-xs fa fa-trash-o", method: :delete, data: { confirm: 'Are you sure?' }%>
        </td>
      </tr>
    <% $i = $i+1 %>
    <%end%>
  </tbody>
</table>
<div id="edit_address"></div>
