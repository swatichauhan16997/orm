            <a class="t-close fa fa-times" href="javascript:;"></a>
          </span>
        </header>
        <div class="panel-body">
          <div class="chartJS">
            <%= line_chart charts_super_admin_new_users_path, xtitle: "Week", ytitle: "User", defer: true, messages: {empty: "No data"}, label: "Users", curve: false, legend: "bottom", refresh: 60 %>
          </div>
        </div>
      </section>
    </div>
  </div>
